<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="app.controllers.PatientsController"
      spacing="20" alignment="TOP_LEFT" style="-fx-padding: 20px;" prefWidth="600.0" prefHeight="600.0">

    <Label text="Patient Registration" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="100" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Gender:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="genderComboBox" prefWidth="300" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Date of Birth:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dobPicker" prefWidth="300" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Contact:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="contactField" prefWidth="300" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Address:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="addressArea" prefRowCount="3" prefWidth="300" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Register Patient" onAction="#registerPatient" prefWidth="200"/>
    <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
</VBox>
