<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="app.controllers.BillingController"
      spacing="20" style="-fx-padding: 20px;" prefWidth="600.0" prefHeight="500.0">

    <Label text="Billing and Invoicing" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Patient ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="patientIdField" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Total Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="totalAmountField" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Paid Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="paidAmountField" prefWidth="300" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Outstanding Balance:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="outstandingBalanceField" prefWidth="300" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusComboBox" prefWidth="300" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15">
        <Button text="Generate Invoice" onAction="#generateInvoice" prefWidth="150"/>
        <Button text="Update Invoice" onAction="#updateInvoice" prefWidth="150"/>
        <Button text="Load Invoice" onAction="#loadInvoice" prefWidth="150"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
</VBox>
