<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controllers.PatientController"
      style="-fx-padding: 20px;">
    
    <Label text="Manage Patients" style="-fx-font-size: 18px;"/>

    <TableView fx:id="patientsTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="ageColumn" text="Age" prefWidth="50"/>
            <TableColumn fx:id="genderColumn" text="Gender" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name" />
        <TextField fx:id="ageField" promptText="Age" />
        <TextField fx:id="genderField" promptText="Gender" />
        <Button text="Add Patient" onAction="#handleAddPatient"/>
    </HBox>

    <Label fx:id="statusLabel" textFill="green"/>

</VBox>
