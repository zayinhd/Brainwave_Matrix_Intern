<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controllers.DoctorController"
      spacing="10" style="-fx-padding: 20px;" alignment="CENTER">

    <Label text="Manage Doctors" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="doctorsTable" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="specializationColumn" text="Specialization" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add Doctor" onAction="#handleAddDoctor"/>
        <Button text="Delete Doctor" onAction="#handleDeleteDoctor"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>

</VBox>
