<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="app.controllers.EHRController"
      spacing="20" style="-fx-padding: 20px;" prefWidth="600.0" prefHeight="600.0">

    <Label text="Electronic Health Record" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Patient ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="patientIdField" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Diagnosis:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="diagnosisArea" prefWidth="300" prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Prescriptions:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="prescriptionArea" prefWidth="300" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Allergies:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextArea fx:id="allergyArea" prefWidth="300" prefRowCount="3" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Notes:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="notesArea" prefWidth="300" prefRowCount="3" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15">
        <Button text="Save Record" onAction="#saveRecord" prefWidth="150"/>
        <Button text="Load Record" onAction="#loadRecord" prefWidth="150"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
</VBox>
